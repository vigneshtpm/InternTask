import 'package:flutter/material.dart';

class PasswordPage extends StatefulWidget {
  const PasswordPage({Key? key}) : super(key: key);

  @override
  _SettingPage createState() => _SettingPage();
}

class _SettingPage extends State<PasswordPage> {

  final TextEditingController _oldController = TextEditingController();
  final TextEditingController _newController = TextEditingController();
  final TextEditingController _confirmController = TextEditingController();


  @override
  Widget build(BuildContext context) {
    return Scaffold(
        backgroundColor: Colors.white,
        appBar:AppBar(
          backgroundColor: Color(0xFF2044FF),
          title: const Text(
            'Change Password',
            style: TextStyle(
              color: Colors.white,
              fontSize: 23.0,

            ),
          ),
          centerTitle: true,
          leading: IconButton(
            icon: const Icon(
              Icons.arrow_back_ios, // iOS-style back arrow
              color: Colors.white,
            ),
            onPressed: () {
              // Code to navigate back
              Navigator.pop(context);
            },
          ),
        ),
      body: SingleChildScrollView(
        child:Container(
          width: double.infinity,
          decoration: const BoxDecoration(
            color: Color(0xFFEAECF0), // Background color of the container
        ),
        child: Container(
          width: double.infinity, // Ensure container fills the width
          margin: const EdgeInsets.only(top: 20), // Optional margin for spacing
          decoration: const BoxDecoration(
            color: Colors.white, // Background color of the container
            borderRadius: BorderRadius.only(
              topLeft: Radius.circular(35), // Rounded top-left corner
              topRight: Radius.circular(35), // Rounded top-right corner
            ),
          ),
          child: Stack(
            children: [
              // Background Container (First Stack)
              Container(
                decoration: const BoxDecoration(
                  color: Colors.white, // Set a background color or image
                  borderRadius: BorderRadius.only(
                    topLeft: Radius.circular(35),
                    topRight: Radius.circular(35),
                  ),
                ),
              ),

              // Profile Image and Text Fields (Second Stack)
              Column(
                crossAxisAlignment: CrossAxisAlignment.center, // Align content to the center of the column
                children: [
                  // Text Fields Section (Add more text fields as needed)
                  Padding(
                    padding: const EdgeInsets.only(top: 30,left: 20.0,right: 20), // Padding for left alignment
                    child: Column(
                      crossAxisAlignment: CrossAxisAlignment.start, // Align column content to the left
                      children: [
                        // Heading text for "First Name"
                        const Padding(
                          padding: EdgeInsets.only(top: 8.0, bottom: 8.0), // Adjust vertical padding
                          child: Text(
                            'Old Password', // The heading text
                            style: TextStyle(
                              fontSize: 16.0, // Font size for the heading
                              fontWeight: FontWeight.bold, // Bold text
                              color: Colors.black, // Set color for the heading text
                              fontFamily: 'Euclid',
                            ),
                          ),
                        ),
                        Container(
                          child: TextField(
                            controller: _oldController,
                            obscureText: true, // Ensures password input shows dots
                            decoration: InputDecoration(
